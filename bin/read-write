#!/usr/bin/env ruby
# Copyright (c) Cognitect, Inc.
# All rights reserved.

$LOAD_PATH << 'lib'
require 'transit'

transport = (ARGV[0] || "json").gsub("-","_").to_sym

r = Transit::Reader.new(transport, STDIN)
w = Transit::Writer.new(transport, STDOUT)

if defined?(RUBY_ENGINE) && RUBY_ENGINE == "jruby"
  begin
    while true do
      o = r.read
      w.write(o)
    end
  rescue
    # exit
  end
else
  r.read {|o| w.write o}
end
